{
    "manifest_version": 3,
    "name": "Grabby",
    "description": "Grab and download all images on your current web page.",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "downloads"],
    "action": {
        "default_title": "Grabby",
        "default_popup": "popup.html"
    },
    "icons": { 
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "48": "/icons/icon48.png" 
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["grabby.html"],
        "matches": ["<all_urls>"]
    }]
}